<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:paddingBottom="8dp">
	<TextView android:id="@+id/separator" android:textAppearance="@style/SectionFont"
		android:background="@color/sectionBg" android:paddingLeft="8dp"
		android:paddingRight="8dp" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:visibility="gone"
		android:text="A" />
	<TextView android:id="@+id/serie_name" android:textAppearance="@style/SerieItemFont"
		android:paddingLeft="8dp" android:paddingRight="8dp"
		android:layout_width="match_parent" android:layout_height="wrap_content" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center">
		<Gallery android:id="@+id/tome_gallery" android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
